<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:orientation="vertical"
    tools:context=".login_Activity">

    <TextView
        android:id="@+id/Txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/prosto_one"
        android:text="EcoRecicla App"
        android:textColor="@color/blue"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/Img_logo_login"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/Btn_inicio_de_sesion"
        android:layout_width="281dp"
        android:layout_height="76dp"
        android:layout_gravity="center"
        android:layout_margin="100dp"
        android:backgroundTint="@color/green_button"
        android:fontFamily="@font/prosto_one"
        android:text="Inicio de sesión"
        android:textColor="@color/white"
        android:textSize="26dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Txt_noTienesUnaCuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prosto_one"
            android:text="¿No tienes una cuenta?"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Txt_registrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/prosto_one"
            android:text="@string/link_registro"
            android:textColorLink="@color/blue"
            android:textSize="18dp"
            android:textStyle="bold"/>


    </LinearLayout>


</LinearLayout>